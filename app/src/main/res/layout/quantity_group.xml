<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back_obs"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botonredondo"
        android:fontFamily="casual"
        android:text="Atrás"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:elevation="10dp"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Registro de Visitantes"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#212121" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="¿Cuántas personas? (incluyéndote)"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#212121"
            android:textSize="70sp"
            android:textFontWeight="bold"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <Button
                android:id="@+id/restar10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botonredondo_pequeno"
                android:fontFamily="casual"
                android:text="-10"
                android:textSize="30sp"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/restar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botonredondo_pequeno"
                android:fontFamily="casual"
                android:text="-"
                android:textSize="30sp"/>

            <EditText
                android:id="@+id/numerovisitantes"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:ellipsize="start"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:textSize="60sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="1"
                android:gravity="center" />
            <Button
                android:id="@+id/sumar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botonredondo_pequeno"
                android:fontFamily="casual"
                android:text="+"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/sumar10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botonredondo_pequeno"
                android:fontFamily="casual"
                android:text="+10"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rango de Edades"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:fontFamily="casual"
            android:layout_marginTop="40dp"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="De"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                android:layout_marginRight="20dp"/>
            <Button
                android:id="@+id/menosDesde"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botonredondo_pequeno"
                android:fontFamily="casual"
                android:text="-"
                android:textSize="30sp"/>

            <EditText
                android:id="@+id/edadDesde"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:textSize="50sp"
                android:padding="10dp"
                android:gravity="center"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/masDesde"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botonredondo_pequeno"
                android:fontFamily="casual"
                android:text="+"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a"
                android:textColor="@android:color/white"
                android:textSize="27sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>
            <Button
                android:id="@+id/menosHasta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botonredondo_pequeno"
                android:fontFamily="casual"
                android:text="-"
                android:textSize="30sp"/>

            <EditText
                android:id="@+id/edadHasta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:textSize="50sp"
                android:padding="10dp"
                android:gravity="center"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/masHasta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botonredondo_pequeno"
                android:fontFamily="casual"
                android:text="+"
                android:textSize="30sp"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="70dp"
            android:id="@+id/nextC"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/botonredondo"
            android:fontFamily="casual"
            android:text="Siguiente"
            android:textSize="40sp"
            app:elevation="30dp">

        </Button>

    </LinearLayout>

</FrameLayout>